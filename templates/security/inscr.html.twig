{% extends 'base.html.twig' %}
{% set active_link = '' %}
{% set isSticky = true
%}
{% block stylesheets %}
	{{ encore_entry_link_tags("app") }}
	<link rel="stylesheet" href="{{ asset('./styles/personal.css') }}"/>
	<link rel="stylesheet" href="{{ asset('./styles/nav.css') }}"/>
	<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet"/>

	<link rel="stylesheet" href="{{ asset('./styles/footer.css') }}"/>

{% endblock %}
{% block javascripts %}
	{{ encore_entry_script_tags("app") }}
	<script src="{{ asset('./js/error.js') }}"></script>
	<script src="{{ asset('./js/nav.js') }}"></script>

{% endblock %}
{% block body %}

<div class="content">
	<div class="container">
		
		<div class="p-3 row form-container rowContainer" style="margin: 150px auto; background-color: white">
			<div class="p-3 col-md-6">
				{{ form_start(form, {'attr': {'class': 'form-group sing-up-bloc', 'action': path('app_inscr')
        }}) }}
				<div class="pb-5 title">
					<span style="border: none">
						<img style="width: 90px; height: 90px; margin-top: 50px" src="{{ asset('icons/wedding-rings.svg') }}" alt="form-svg"/>
					</span>
					<h2 class="pt-2">Inscrivez-vous</h2>
				</div>

				{# Username field #}
				{{ form_row(form.username, {'attr': {'class': 'form-control custom-input', 'placeholder': 'Nom d\'utilisateur'
        }}) }}
        <br />
        {# Email field #}
        {{ form_row(form.email, {'attr': {'class': 'form-control custom-input', 'placeholder': 'Adresse Email'
        }}) }}
        <br />
        {# Password fields #}
        {{ form_row(form.password.first, {'attr': {'class': 'form-control custom-input', 'placeholder': 'Mot de passe'        }}) }}
        <br />
        {{ form_row(form.password.second, {'attr': {'class': 'form-control custom-input', 'placeholder': 'Confirmation du mot de passe'        }}) }}
        <br />
        <div class="form-group" id="custom-row">
          <button type="submit" class="custom-button">Valider</button>
          <a href="{{ path('app_inscr') }}" class="custom-button-outlined"
            >Annuler</a
          >
        </div>
        {{ form_end(form) }}
      </div>

      <div
        class="p-3 col-md-6 d-flex justify-content-center align-items-center"
      >
        <div class="svg-box">
          <img src="{{ asset('icons/wedding-couple.svg') }}" alt="form-svg" />
        </div>
      </div>
    </div>
  </div>
</div>

{% endblock %}
