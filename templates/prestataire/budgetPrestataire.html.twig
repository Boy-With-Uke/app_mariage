{% endblock %} {% block title %}Budget{% endblock %} {% block body %} {% if
fournisseur %}

<div class="container-fluid">
  <div class="row main mx-auto " >
    <div class="col-md-6">
      <div class="row p-2">
        <img
          src="/uploads/images/{{ fournisseur.photo }}"
          alt="img"
          id="presta-img"
        />
      </div>
      <div class="row bottom-left">
        <h1 class="display-4" id="title">{{ fournisseur.nom }}</h1>
      </div>
      <div class="row bottom-left">
        <p class="lead" id="description">{{ fournisseur.description }}</p>
      </div>
      <div class="row borrom-left">
        <div class="col-6">
          <div class="row bottom-left">
            <h2 class="" style="color: #ff4081">
              {{totalPrice | number_format(2)}}<span> Ariary</span>
            </h2>
          </div>
        </div>
        <div class="col-6">
          <div class="row bottom-left">
            <div class="col-12 text-center">
              <a
                class="btn custom-button"
                id="{% if app.user %}commande{% else %}login_app{% endif %}"
                >commander</a
              >
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="services-grid">
        {% for presta in prestateur %}
        <div class="service-item">
          <div class="service-content">
            <div class="service-type">
              {% if presta.type == 1 %}
              <span>Lieu de réception et salle de réception</span>
              {% elseif presta.type == 2%}
              <span>Repas</span>
              {% elseif presta.type == 3 %}
              <span>Photo & Vidéo</span>
              {% elseif presta.type == 4 %}
              <span>Transport</span>
              {% elseif presta.type == 5 %}
              <span>Fleurs et décoration</span>
              {% elseif presta.type == 6 %}
              <span>Animation</span>
              {% elseif presta.type == 7 %}
              <span>Mise en beauté</span>
              {% elseif presta.type == 8 %}
              <span>Tenue vestimentaire</span>
              {% endif %}
            </div>
            <div class="service-price">
              <input
                type="hidden"
                id="presta_price"
                value="{{ presta.price }}"
              />
              <span
                >Tarif : {{presta.price | number_format(2)}}
                <small>Ariary</small></span
              >
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>
{% else %}
<div class="div-nothing">
  <h2 class="h2_nothing">L'id prestataire n'existe de pas...</h2>
</div>
{% endif %}

<script src="{{ asset('./js/vanilla-tilt.js') }}"></script>

<script>
  function ajoutPanier() {
    let price_active = parseFloat($("#price_active").val());
    let presta_price = parseFloat($("#presta_price").val())
      ? parseInt($("#presta_price").val())
      : 0;
    if (price_active > presta_price) {
      alert("Votre budget est insuffisant face à votre commande...");
    } else {
      let id = $("#id_active").val();
      let data = {
        id_fournisseur: $("#id_fournisseur").val(),
      };
      $.ajax({
        url: "/panier/" + id,
        method: "PUT",
        data: data,
        success: function (response) {
          alert("Ajout panier effectué...");
        },
      });
    }
  }
  $("#commande").click(function () {
    ajoutPanier();
  });

  function ajoutCode() {
    var id = parseInt($("#id_fournisseur").val());
    var popul = parseInt($("#code_populaire").val());
    let n = +1;
    let data = {
      popularite: popul + parseInt(n),
    };

    $.ajax({
      url: "/popularite/" + id,
      method: "PUT",
      data: data,
      success: function (response) {
        console.log("Ajout panier effectué...");
      },
    });
  }
  $(document).ready(function () {
    ajoutCode();
  });
</script>

